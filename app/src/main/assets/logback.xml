<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="LOGCAT" class="ch.qos.logback.classic.android.LogcatAppender">
    <encoder>
      <pattern>%msg%n</pattern>
    </encoder>
  </appender>

  <root level="ERROR">
    <appender-ref ref="LOGCAT" />
  </root>

</configuration>