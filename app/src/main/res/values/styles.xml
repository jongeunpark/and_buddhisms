<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--

            Base application theme, dependent on API level. This theme is replaced
            by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--  Customize your theme here.  -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="drawerArrowStyle">@style/ToolbarColorStyle</item>
        <item name="actionMenuTextColor">@color/primary_text</item>
        <item name="colorControlNormal">@color/primary_text</item>
        <item name="actionBarTheme">@style/MyApp.ActionBarTheme</item>
    </style>
    <style name="toolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/primary</item>
    </style>
    <style name="MyApp.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!--  THIS is where you can color the arrow!  -->
        <item name="colorControlNormal">@color/primary</item>
    </style>
    <style name="ToolbarColorStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/icons</item>
    </style>
    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/icons</item>
    </style>
    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <!--  Misc  -->
    <style name="TabIndicator"/>
    <declare-styleable name="ScrimInsetsView">
        <attr name="insetForeground" format="reference|color"/>
    </declare-styleable>




</resources>