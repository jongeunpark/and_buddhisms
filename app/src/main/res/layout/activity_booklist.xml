<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/booklist_adFragment"
        class="com.jp.buddhisms.fragments.AdFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/booklist_adFragment"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">
        <include layout="@layout/toolbar_actionbar" />

        <com.github.ksoichiro.android.observablescrollview.ObservableListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/booklist_list_book"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"


            android:divider="@android:color/transparent"
            android:dividerHeight="0dp" />

    </LinearLayout>

</RelativeLayout>