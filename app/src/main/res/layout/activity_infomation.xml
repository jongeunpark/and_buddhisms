<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <fragment
        android:id="@+id/infomation_adFragment"
        class="com.jp.buddhisms.fragments.AdFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/infomation_scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/infomation_adFragment"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/infomation_body"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"

                android:text="재"
                android:textColor="@color/primary_text"
                android:textSize="18dp" />

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"


                    android:padding="8dp"
                    android:text="@string/info1"
                    android:textColor="@color/secondary_text"
                    android:textSize="16dp" />
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:text="천도재"

                android:textColor="@color/primary_text"
                android:textSize="18dp" />

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:padding="8dp"
                    android:text="@string/info2"
                    android:textColor="@color/secondary_text"
                    android:textSize="16dp" />
            </android.support.v7.widget.CardView>



            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:text="수륙재"
                android:textColor="@color/primary_text"
                android:textSize="18dp" />
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:padding="8dp"
                    android:text="@string/info3"
                    android:textColor="@color/secondary_text"
                    android:textSize="16dp" />
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:text="영산재"
                android:textColor="@color/primary_text"
                android:textSize="18dp" />
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:padding="8dp"
                    android:text="@string/info4"
                    android:textColor="@color/secondary_text"
                    android:textSize="16dp" />
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:text="예수재"
                android:textColor="@color/primary_text"
                android:textSize="18dp" />
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"

                    android:padding="8dp"
                    android:text="@string/info5"
                    android:textColor="@color/secondary_text"
                    android:textSize="16dp" />
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:text="연등회"
                android:textColor="@color/primary_text"
                android:textSize="18dp" />
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"

                    android:padding="8dp"
                    android:text="@string/info6"
                    android:textColor="@color/secondary_text"
                    android:textSize="16dp" />
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:text="다비식"
                android:textColor="@color/primary_text"
                android:textSize="18dp" />
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"

                    android:padding="8dp"
                    android:text="@string/info7"
                    android:textColor="@color/secondary_text"
                    android:textSize="16dp" />
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:text="다례"
                android:textColor="@color/primary_text"
                android:textSize="18dp" />
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"

                    android:padding="8dp"
                    android:text="@string/info8"
                    android:textColor="@color/secondary_text"
                    android:textSize="16dp" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
